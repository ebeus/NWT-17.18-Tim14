<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_destination"
        android:layout_alignParentLeft="true"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin" />

    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:paddingBottom="@dimen/trip_history_spacing"
        android:paddingRight="@dimen/trip_history_spacing"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/edit_text_size"
        android:paddingEnd="@dimen/trip_history_spacing" />

    <TextView
        android:id="@+id/textView_duration_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_date"
        android:text="@string/txt_trip_duration"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:padding="@dimen/trip_history_spacing"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/textView_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_date"
        android:layout_toEndOf="@+id/textView_duration_c"
        android:layout_toRightOf="@+id/textView_duration_c"
        android:padding="@dimen/trip_history_spacing"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/textView_kilometers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_duration"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:padding="@dimen/trip_history_spacing"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:id="@+id/textView_kilometers_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_trip_distance_in_km"
        android:layout_below="@+id/textView_duration"
        android:layout_toEndOf="@+id/textView_kilometers"
        android:layout_toRightOf="@+id/textView_kilometers"
        android:padding="@dimen/trip_history_spacing"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size_small" />

    <ImageButton
        android:id="@+id/imageButtonShowOnMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView_duration"
        android:src="@drawable/ic_map"
        android:padding="10dp"
        android:background="@null" />

</RelativeLayout>