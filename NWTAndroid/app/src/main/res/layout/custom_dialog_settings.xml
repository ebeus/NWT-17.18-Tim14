<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:id="@+id/layout_settings_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/settings_spacing"
        android:layout_marginEnd="@dimen/settings_spacing"
        android:layout_marginStart="@dimen/settings_spacing">

        <ImageView
            android:id="@+id/image_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_user_settings"
            android:layout_margin="@dimen/settings_spacing" />

        <TextView
            android:id="@+id/tv_change"
            style="@style/AppTheme.SimpleACTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_centerVertical="true"
            android:text="@string/change_str"
            android:layout_marginEnd="@dimen/settings_spacing"
            android:layout_marginRight="@dimen/settings_spacing"
            android:layout_toEndOf="@+id/image_change"
            android:layout_toRightOf="@+id/image_change" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_settings_sign_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/settings_spacing" >

        <ImageView
            android:id="@+id/image_sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_logout"
            android:layout_margin="@dimen/settings_spacing"/>

        <TextView
            android:id="@+id/tv_sign_out"
            style="@style/AppTheme.SimpleACTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_centerVertical="true"
            android:text="@string/sign_out_str"
            android:layout_marginEnd="@dimen/settings_spacing"
            android:layout_marginRight="@dimen/settings_spacing"
            android:layout_toEndOf="@+id/image_sign_out"
            android:layout_toRightOf="@+id/image_sign_out" />
    </RelativeLayout>

</LinearLayout>