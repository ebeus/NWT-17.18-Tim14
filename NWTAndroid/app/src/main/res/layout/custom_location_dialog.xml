<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_AlertDialog_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/textView_title"
        style="@style/AppTheme.SimpleACTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingTop="@dimen/settings_spacing"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryLight" />

    <TextView
        android:id="@+id/textView_text"
        style="@style/AppTheme.SimpleACTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingTop="@dimen/settings_spacing"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_no"
            style="@style/AppTheme.SimpleButton"
            android:text="@string/str_no"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/settings_spacing"
            android:layout_marginRight="@dimen/settings_spacing" />

        <Button
            android:id="@+id/button_yes"
            style="@style/AppTheme.SimpleButton"
            android:text="@string/str_yes"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/settings_spacing"
            android:layout_marginLeft="@dimen/settings_spacing" />

    </LinearLayout>

</LinearLayout>