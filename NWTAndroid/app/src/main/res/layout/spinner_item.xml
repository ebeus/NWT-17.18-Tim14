<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:paddingTop="@dimen/settings_spacing"
    android:paddingEnd="@dimen/settings_spacing"
    android:paddingStart="@dimen/settings_spacing">

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_user_settings"
            android:layout_margin="@dimen/settings_spacing" />

        <TextView
            android:id="@+id/tv_item"
            style="@style/AppTheme.SimpleACTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_centerVertical="true"
            android:text="@string/change_str"
            android:layout_marginEnd="@dimen/settings_spacing"
            android:layout_marginRight="@dimen/settings_spacing"
            android:layout_toEndOf="@+id/image_item"
            android:layout_toRightOf="@+id/image_item" />

</RelativeLayout>